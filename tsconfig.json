{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node16",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "experimentalResolver": true,
    "files": true,
  },
  "include": [
    "hardhat.config.cts",
    "./scripts",
    "./deploy",
    "./test",
    "typechain-types/**/*"
  ]
}
